@model ContatoModel
@{
    ViewData["Title"] = "Criar Contatos.";
}

<div class="text-center">

    <h1 class="display-4">Criação de Contatos </h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira seu nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br />
    <div class="form-group">
        <label for="exampleInputPassword1">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Insira seu e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <div class="form-group">
        <label for="exampleInputPassword1">Número de telefone</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Insira seu celular" maxlength="11" />
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>
